{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": false,
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": ["error", { "allow": ["warn", "error"] }],
		"no-empty": ["error", { "allowEmptyCatch": true }]
	}
}