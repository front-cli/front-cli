{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 8 // or 2017
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": 0,
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": 0,
		"no-empty": ["error", { "allowEmptyCatch": true }]
	}
}